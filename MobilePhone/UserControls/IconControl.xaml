<UserControl x:Class="MobilePhone.UserControls.IconControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MobilePhone.UserControls"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid>
		<Border BorderBrush="AliceBlue" BorderThickness="1" CornerRadius="10 10 10 10" Background="AliceBlue">
			<Grid>
				<materialDesign:PackIcon x:Name="AppIcon" Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center"
								 Foreground="{Binding Foreground}" Kind="{Binding Kind}" Margin="0,2"/>
				<TextBlock x:Name="AppName" Text="MarginThatIsExtremelybig" FontSize="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="2,0,2,5"
						   FontFamily="Palatino" Foreground="Black" TextTrimming="CharacterEllipsis"/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
