<UserControl x:Class="MobilePhone.UserControls.NotepadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MobilePhone.UserControls"
             mc:Ignorable="d" FontFamily="Palatino"
             d:DesignHeight="600" d:DesignWidth="450">

	<UserControl.Resources>
		<SolidColorBrush x:Key="BackgroundBrush" Color="LightGray"/>
	</UserControl.Resources>

	<Grid Background="{StaticResource BackgroundBrush}">
		<TextBlock Text="Notes" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5" FontWeight="DemiBold"/>

		<ScrollViewer x:Name="NotesScrollViewer" Margin="20,50,20,20" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" HorizontalContentAlignment="Center">
			<StackPanel x:Name="NotesPanel" Orientation="Vertical">
				
			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>
